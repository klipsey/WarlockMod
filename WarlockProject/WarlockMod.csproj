			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="BepInEx.Core" Version="5.4.*" />
		<PackageReference Include="RiskOfRain2.GameLibs" Version="1.2.4-r.0" />
		<PackageReference Include="UnityEngine.Modules" Version="2019.4.26" />
		<PackageReference Include="MMHOOK.RoR2" Version="2022.9.20">
			<NoWarn>NU1701</NoWarn>
		</PackageReference>
		<PackageReference Include="R2API.Core" Version="5.*" />
		<PackageReference Include="R2API.Prefab" Version="1.*" />
		<PackageReference Include="R2API.RecalculateStats" Version="1.*" />
		<PackageReference Include="R2API.Language" Version="1.*" />
		<PackageReference Include="R2API.Unlockable" Version="1.*" />
		<PackageReference Include="R2API.DamageType" Version="1.*" />
		<PackageReference Include="R2API.TempVisualEffect" Version="1.*" />
		<PackageReference Include="R2API.Dot" Version="1.*" />
		<PackageReference Include="R2API.Orb" Version="1.*" />
		<PackageReference Include="R2API.Deployable" Version="1.*" />
		<PackageReference Include="R2API.Sound" Version="1.*" />
		<PackageReference Include="R2API.Networking" Version="1.*" />
	</ItemGroup>

	<ItemGroup>
	  <Reference Include="Decalicious">
	    <HintPath>libs\Decalicious.dll</HintPath>
	  </Reference>
		<Reference Include="ShaderSwapper">
			<HintPath>libs\ShaderSwapper.dll</HintPath>
		</Reference>
		<Reference Include="Unity.Postprocessing.Runtime">
			<HintPath>libs\Unity.Postprocessing.Runtime.dll</HintPath>
		</Reference>
		<Reference Include="CustomEmotesAPI">
			<HintPath>libs\CustomEmotesAPI.dll</HintPath>
		</Reference>
			<Reference Include="AncientScepter">
			<HintPath>libs\AncientScepter.dll</HintPath>
		</Reference>
	</ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="REM follow the Building Your Mod page on the henrytutorial wiki for more information on this&#xD;&#xA;REM change this to your username (or add yours if you're working in a team or somethin)&#xD;&#xA;if &quot;$(Username)&quot; == &quot;mario&quot; set build=true&#xD;&#xA;&#xD;&#xA;if defined build (&#xD;&#xA;&#xD;&#xA;REM copy the built mod to our Build folder&#xD;&#xA;copy &quot;$(TargetPath)&quot; &quot;$(ProjectDir)..\Build\plugins&quot;&#xD;&#xA;&#xD;&#xA;REM copy the assetbundle from our unity project to our Build folder&#xD;&#xA;REM change these paths to your (now hopefully renamed) folders&#xD;&#xA;if exist &quot;$(ProjectDir)..\InterrogatorUnityProject\AssetBundles\StandaloneWindows\interrogator&quot; (&#xD;&#xA;copy &quot;$(ProjectDir)..\InterrogatorUnityProject\AssetBundles\StandaloneWindows\interrogator&quot; &quot;$(ProjectDir)..\Build\plugins\AssetBundles&quot;&#xD;&#xA;)&#xD;&#xA;&#xD;&#xA;REM copy the soundbanks from our unity project to our Build folder&#xD;&#xA;REM change these paths to your (now hopefully renamed) folders&#xD;&#xA;if exist &quot;$(ProjectDir)..\InterrogatorProject\interrogator_bank&quot; (&#xD;&#xA;copy &quot;$(ProjectDir)..\InterrogatorProject\Interrogator_bank&quot; &quot;$(ProjectDir)..\Build\plugins\Soundbanks&quot;&#xD;&#xA;)&#xD;&#xA;&#xD;&#xA;REM copy the whole Build\plugins folder into your r2modman profile. This mimics how r2modman will install your mod&#xD;&#xA;Xcopy /E /I /Y &quot;$(ProjectDir)..\Build\plugins&quot; &quot;C:\Users\mario\AppData\Roaming\r2modmanPlus-local\RiskOfRain2\profiles\warlock\BepInEx\plugins\kenko-Warlock\&quot;&#xD;&#xA;)" />  </Target>

</Project>